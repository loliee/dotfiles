function fasd_cd() {
  local dir
  local fasd_ret
  fasd_ret="$(fasd -Rdl "$@")"
  if [[ -d "$fasd_ret" ]]; then
    cd "$fasd_ret" || exit
  else
    dir="$(print "$fasd_ret" | fzf -1 -0 --no-sort +m)" && cd "${dir}" || return 1
  fi
}

# Fast rsync remove
function rmf() {
   printf "Will remove direcory %s ! \nCTRL-C to abort...%s"
   sleep 3
   mkdir -p /tmp/empty_dir/
   [[ ! -z "$1" ]] && [[ $1 != '/' ]] && rsync -a --delete /tmp/empty_dir/ "$1"/
   [[ -d "$1" ]] && [[ "$1" != '.' ]] && rmdir "$1";
   rmdir /tmp/empty_dir
}

# fkill - kill process
fkill() {
  pid=$(ps -ef | sed 1d | fzf -m | awk '{print $2}')
  if [ "x$pid" != "x" ]
  then
    kill -"${1:-9}" "$pid"
  fi
}

