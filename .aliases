#!/usr/bin/env bash
# Aliases
# vim: syntax=sh

alias vi='vim'

# Misc
alias ri='ri -f ansi'

# Some aliases to avoid making mistakes
alias rm='rm -i'
alias cp='cp -i'
alias mv='mv -i'
alias ln='ln -i'

# Remove SSH sockets
alias rma='find ~/.ssh -name "$USER@*" -exec rm "{}" \;'

# always color grep
alias grep='grep --color=auto'

# shortcuts
alias c='clear'
alias q='exit'
alias h='history'
alias k='k9s'

# Time
alias now='date +"%T"'
alias nowtime='now'
alias nowdate='date +"%d-%m-%Y"'

# Reload the shell (i.e. invoke as a login shell)
alias reload='exec $SHELL -l'

alias ls='ls -G'
alias ll='ls -lah'

# Display x509 certificate infos
alias ccert='openssl x509 -text -noout -in'

alias ga='git absorb'
alias gaf='git absorb --force'
alias gar='git absorb --and-rebase'
alias garf='git absorb --and-rebase'

alias ca='cargo'
alias da='direnv allow'
alias dc='docker-compose'
alias ncdu='diskonaut'

# kubernetes
alias kb='kubectl'
alias kx='kubectx'
alias kn='kubens'

# Ripgrep
alias rga='rg --hidden --no-ignore'
alias rgd='rg --hidden'